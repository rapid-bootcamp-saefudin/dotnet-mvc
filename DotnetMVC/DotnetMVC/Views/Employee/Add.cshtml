@model EmployeeViewModel

@{
    ViewData["Title"] = "Employee Add Data";
}

<h2>Form Add Employee</h2>

<form asp-action="Save" method="post">
    <div class="form-group">
        <label asp-for="Id">Employee ID</label>
        <input asp-for="Id" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Name">Employee Name</label>
        <input asp-for="Name" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Email">Employee Email</label>
        <input asp-for="Email" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Gender">Employee Gender</label>
        <input asp-for="Gender" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="JobPosition">Employee JobPosition</label>
        <input asp-for="JobPosition" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Status">Employee Status</label>
        <input asp-for="Status" class="form-control">
    </div>

    <button type="submit" class="btn btn-primary mt-2 mb-2">Submit</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
