@model InventarisViewModel

@{
    ViewData["Title"] = "Inventaris Add Data";
}

<h2>Form Add Inventaris</h2>

<form asp-action="Save" method="post">
    <div class="form-group">
        <label asp-for="Id">Inventaris ID</label>
        <input asp-for="Id" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="ProductName">Product Name</label>
        <input asp-for="ProductName" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Category">Category</label>
        <input asp-for="Category" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Brand">Brand</label>
        <input asp-for="Brand" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Stock">Stock</label>
        <input asp-for="Stock" class="form-control">
    </div>

    <button type="submit" class="btn btn-primary mt-2 mb-2">Submit</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
